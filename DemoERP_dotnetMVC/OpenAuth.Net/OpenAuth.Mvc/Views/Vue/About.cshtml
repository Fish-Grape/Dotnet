@{
    ViewBag.Title = "About";
}
<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>

<div id="app">
    <my-header></my-header>
    <my-header></my-header>
    <p>{{message}}</p>
</div>
<div id="app2">
    <my-header></my-header>
</div>

<script type="text/javascript">
        var vm = new Vue({
            el: '#app',
            data: {
                message: "hello vue!!!"
            },
            components: {
                'my-header': {
                    template: "<h2 v-on:click='changeCount'>{{count}}</h2>",
                    data: function () {
                        return {
                            count:0
                        }
                    },
                    methods: {
                        changeCount: function () {
                            this.count++;
                        }
                    }
                }
            }
    });

    //Vue组件其实是一个可扩展的Vue实例
    var comp = Vue.extend({
        data: function () {
            return {
                message:"hello Vue!"
            }
        }
    });

    var vm2 = new comp({
        el:'#app'
    });
</script>